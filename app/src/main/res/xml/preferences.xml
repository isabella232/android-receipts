<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/preferences_label">
        <Preference
            android:key="@string/clear_user_data"
            android:summary="@string/clear_user_data_summary"
            android:title="@string/clear_user_data_label" />

        <Preference
            android:key="@string/clear_autocomplete"
            android:summary="@string/clear_autocomplete_summary"
            android:title="@string/clear_autocomplete_label" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/set_default_date"
            android:summary="@string/set_default_date_summary"
            android:title="@string/set_default_date_label" />

        <ListPreference
            android:defaultValue="1"
            android:key="@string/select_daynight_mode"
            android:summary="@string/select_daynight_mode_summary"
            android:title="@string/select_daynight_mode_label" />

    </PreferenceCategory>
</PreferenceScreen>
